<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group row">
        <label for="name" class="col-sm-1 col-form-label">name：</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" value="{{user.name}}" placeholder="請輸入要修改的名字" name="name" id="name">
        </div>
    </div>
    <div class="form-group row">
        <label for="image" class="col-sm-1 col-form-label">Image：</label>
        <div>
            <input type="file" id="image" name="image">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>