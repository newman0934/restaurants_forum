<div class="row border mb-4 p-3">
    <div class="col-sm-4">
        <img class="img-thumbnail" src="{{user.image}}" alt="">
    </div>
    <div class="col-sm-8">
        <p>{{user.name}}</p>
        <p>{{user.email}}</p>
              {{#ifCond userId user.id}}

        <a href="/users/{{user.id}}/edit">
            <button class="btn btn-primary">編輯</button>
        </a>
              {{/ifCond}}
    </div>
</div>
<div class="row border p-2 mb-2">
    <div class="col-sm-12">
        <h2>評論的店家共有{{commentRestaurant.length}}間</h2>
        {{#each commentRestaurant}}
        <a href="../restaurants/{{this.Restaurant.id}}">
            <img class="col-sm-2 px-0" src="{{this.Restaurant.image}}" alt="">
        </a>
        {{/each}}
    </div>
</div>
<div class="row border p-2 mb-2">
    <div class="col-sm-12">
        <h2>已追蹤{{user.Followings.length}}位使用者</h2>
        {{#each user.Followings}}
        <a href="../users/{{this.id}}">
            <img class="col-sm-2 px-0" src="{{this.image}}" alt="">
        </a>
        {{/each}}
    </div>
</div>
<div class="row border p-2 mb-2">
    <div class="col-sm-12">
        <h2>共有{{user.Followers.length}}位追隨者</h2>
        {{#each user.Followers}}
        <a href="../users/{{this.id}}">
            <img class="col-sm-2 px-0" src="{{this.image}}" alt="">
        </a>
        {{/each}}
    </div>
</div>
<div class="row border p-2 mb-2">
    <div class="col-sm-12">
        <h2>收藏的店家共有{{user.FavoritedRestaurants.length}}間</h2>
        {{#each user.FavoritedRestaurants}}
        <a href="../restaurants/{{this.id}}">
            <img class="col-sm-2 px-0" src="{{this.image}}" alt="">
        </a>
        {{/each}}
    </div>
</div>
